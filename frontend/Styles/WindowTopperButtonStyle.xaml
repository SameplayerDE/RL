    <Style 
        TargetType="{x:Type Button}"
        x:Key="ModernWindowsCloseButton">
        <Style.Setters>
            <Setter
                Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid
                            Background="{TemplateBinding Background}">
                            <Image
                                Margin="5"
                                Source="/Assets/Images/x_white.png">
                            </Image>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter
                Property="Background"
                Value="Transparent"/>
        </Style.Setters>
        <Style.Triggers>
            <Trigger
                Property="IsMouseOver"
                Value="True">
                <Setter
                    Property="Background"
                    Value="{StaticResource AccentRed}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
